# Local development configuration for Incident.io plugin
# Copy this file to .trmnlp.yml and update with your actual values

# Watch these files for changes during development
watch:
  - .trmnlp.yml
  - src

# Test values for custom fields (used when running bin/dev)
custom_fields:
  api_key: "inc_your_api_key_here"  # Get from Incident.io Settings > API Keys
  max_incidents: 10

