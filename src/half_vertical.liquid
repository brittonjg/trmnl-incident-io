{% comment %}
  Incident.io Active Incidents - Half Vertical Layout
  Vertical incident list with severity indicators
{% endcomment %}

<div class="layout layout--col gap--space-between">

  <!-- Header -->
  {% render "metrics_header", active: active_count, critical: critical_count, resolved: closed_count %}

  <!-- Incidents List -->
  <div class="grid grid--cols-1 gap--small">
    {% assign incident_count = 0 %}
    {% for incident in all_incidents %}
      {% if incident.incident_status.category != "closed" and incident_count < 4 %}
        {% assign incident_count = incident_count | plus: 1 %}
        {% render "incident_card", incident: incident, truncate_length: 35 %}
      {% endif %}
    {% endfor %}
    {% if active_count == 0 %}
      {% render "empty_state", size: 'medium' %}
    {% endif %}
  </div>

</div>

<!-- Title Bar -->
{% render "title_bar" %}
